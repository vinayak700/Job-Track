<div class="d-flex flex-row flex-wrap gap-4 m-4">
    <% jobs.forEach((job)=> { %>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <a class="btn btn-sm btn-info" role="button" aria-disabled="true">
                        Actively Hiring
                        <img src="https://img.icons8.com/external-others-iconmarket/64/external-hiring-business-analysis-others-iconmarket-4.png"
                            alt="Hiring Icon" style="width: 1rem; height: 1rem;" />
                    </a>
                </div>
                <h4 class="card-title mt-2">
                    <%= job.companyname %>
                </h4>
                <h6 class="card-subtitle mb-2">
                    <%= job.jobdesignation %>
                </h6>
                <p class="card-text">
                    <%= job.joblocation %>
                </p>
                <p class="card-text"><strong>Salary:</strong> $<%= job.salary %>
                </p>
                <a href="/jobs/<%= job.id %>" class="btn btn-outline-secondary col-12 mx-auto">View Details</a>
            </div>
        </div>
        <% }); %>
</div>
